root@ansiblec:~# cat build-webservers.yml
---
- become: yes
  become_method: sudo
  hosts: webservers
  tasks:
          - name: Run Docker script
             shell: ./dockerubuntu.sh

          - name: Run Jenkins script
            shell: ./jenkinsubuntu.sh
          
          - name: Run tomcat script
            shell: ./tomcat.sh

          - name: Run postgress script
            shell: ./Postgresql-Install1.sh
